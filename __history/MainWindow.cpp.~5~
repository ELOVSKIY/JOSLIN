	string code = AnsiString(CodeMemo ->Lines ->Text).c_str();
}
// ---------------------------------------------------------------------------

System::UnicodeString getStringFromMemo(TMemo *Memo){
	int count = Memo ->Lines ->Count;
	System::UnicodeString memoString = "";
		for (int i = 0; i < count; i++) {
	   memoString = memoString + Memo -> Lines ->Strings[i];
	}
	return memoString;
}

void __fastcall TMainForm::AnalyzeClick(TObject *Sender) {
	auto text = getStringFromMemo(CodeMemo);
	auto aga = text;
}


