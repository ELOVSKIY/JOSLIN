string unicodeToString(UnicodeString str) {
	return AnsiString(str).c_str();
}
//---------------------------------------------------------------------------
void __fastcall TFileNameForm::ConfirmButtonClick(TObject *Sender)
{
    string fileName = unicodeToString(FileNameEdit ->Text);
}
